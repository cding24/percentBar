<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="这是一个比例条显示控件。" />

    <com.linghu.percentbar.PercentBar
        android:id="@+id/phy_percentBar"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="14dp"
        android:layout_below="@id/title"
        app:percent="0"
        app:percentEndColor="@color/common_orange"
        app:percentLeftWidth="60dp"
        app:percentName="物理"
        app:percentNameColor="@color/black"
        app:percentNameTxtSize="16sp"
        app:percentPaddingBottom="2dp"
        app:percentPaddingTop="3dp"
        app:percentStartColor="@color/common_light_orange"
        app:percentbgColor="#f4f4f8" />

    <com.linghu.percentbar.PercentBar
        android:id="@+id/chem_percentBar"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/phy_percentBar"
        app:percent="0"
        app:percentEndColor="@color/common_orange"
        app:percentLeftWidth="60dp"
        app:percentName="化学"
        app:percentNameColor="@color/black"
        app:percentNameTxtSize="16sp"
        app:percentPaddingBottom="2dp"
        app:percentPaddingTop="3dp"
        app:percentStartColor="@color/common_light_orange"
        app:percentbgColor="#f4f4f8" />

</RelativeLayout>